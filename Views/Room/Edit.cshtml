@model HotelReservationApp.Data.Models.Room

<div class="container mt-4">
    <h2 class="text-center">Edit Room</h2>
    <form asp-action="EditRoom" method="post">
        <input type="hidden" asp-for="RoomId" />
        <div class="mb-3">
            <label for="Type" class="form-label">Type</label>
            <input type="text" asp-for="Type" class="form-control" />
        </div>
        <div class="mb-3">
            <label for="PricePerNight" class="form-label">Price Per Night</label>
            <input type="number" asp-for="PricePerNight" class="form-control" step="0.01" />
        </div>
        <div class="form-check mb-3">
            <input type="checkbox" asp-for="IsAvailable" class="form-check-input" />
            <label for="IsAvailable" class="form-check-label">Available</label>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
